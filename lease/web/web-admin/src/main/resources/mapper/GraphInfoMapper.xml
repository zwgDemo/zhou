<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.lease.web.admin.mapper.GraphInfoMapper">

    <resultMap id="BaseResultMap" type="com.atguigu.lease.model.entity.GraphInfo">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="itemType" column="item_type" jdbcType="TINYINT"/>
        <result property="itemId" column="item_id" jdbcType="BIGINT"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,name,item_type,
        item_id,url,create_time,
        update_time,is_deleted
    </sql>
    <select id="selectListByItemTypeAndId" resultType="com.atguigu.lease.web.admin.vo.graph.GraphVo">
        select name, url
        from graph_info gi
        where gi.is_deleted = 0
          and gi.item_type = #{itemType}
          and gi.item_id = #{id}
    </select>
    <select id="selectGraphVoByItemTypeAndId" resultType="com.atguigu.lease.web.admin.vo.graph.GraphVo">
        select name, url
        from graph_info gi
        where gi.is_deleted = 0
          and gi.item_type = #{itemType}
          and gi.item_id = #{id}
    </select>


</mapper>
