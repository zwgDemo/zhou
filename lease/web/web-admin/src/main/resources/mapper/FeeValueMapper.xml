<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.lease.web.admin.mapper.FeeValueMapper">

    <resultMap id="BaseResultMap" type="com.atguigu.lease.model.entity.FeeValue">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="unit" column="unit" jdbcType="VARCHAR"/>
        <result property="feeKeyId" column="fee_key_id" jdbcType="BIGINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,name,unit,
        fee_key_id,create_time,update_time,
        is_deleted
    </sql>
    <update id="removeKeyValue">
        UPDATE fee_value
        SET update_time=now(),
            is_deleted=1
        WHERE is_deleted = 0
          AND (fee_key_id = #{feeKeyId})
    </update>
    <select id="selectListById" resultType="com.atguigu.lease.web.admin.vo.fee.FeeValueVo">
        select fv.id, fv.name, fv.unit, fv.fee_key_id, fk.id, fk.name
        from fee_value fv
                 left join fee_key fk on fv.fee_key_id = fk.id and fk.is_deleted = 0
        where fv.is_deleted = 0
          and fv.id in (select fee_value_id
                               from apartment_fee_value
                               where is_deleted = 0
                                 and apartment_id = #{id})
    </select>
</mapper>
